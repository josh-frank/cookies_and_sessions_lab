<h1>View all products</h1>

<ul>
    <% if session[ :cart ] %>
        <% session[ :cart ].each do | product | %>
            <li><%= product %></li>
        <% end %>
    <% end %>
</ul>

<hr />

<%= form_tag controller: "products", action: "add", method: "post" do %>
        <%= text_area_tag :product %>
        <%= button_tag "add to cart", type: "submit" %>
<% end %>
